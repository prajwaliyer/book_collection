<h1> Deleting Book </h1>
<%= form_for(@book, :method => 'delete') do |f| %>
    <p>Are you sure you want to permanently delete this book?</p>

    <p>
        <strong>Title:</strong>
        <%= @book.title %>
		
		<br/>
		
		<strong>Author:</strong>
        <%= @book.author %>
		
		<br/>
		
		<strong>Price:</strong>
        <%= @book.price %>
		
		<br/>
		
		<strong>Published Date:</strong>
        <%= @book.publish_date %>
		
		<br/>
    </p>

    <div class="form-buttons">
        <%= f.submit("Delete Book") %>
    </div>
<% end %>

<%= link_to 'Back', books_path %>